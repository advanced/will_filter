<% if wf_filter.errors[index] %>

    <div class="alert alert-error">
      <%= wf_filter.errors[index] %>
    </div>

<% end %>
<div class="form-inline well">

  <%= select_tag "wf_c#{index}", options_for_select(wf_filter.condition_options, condition.key.to_s), {:class=>"span2", :onChange=>"wfFilter.updateConditionAt('#{index}')"} %>
  <%= select_tag "wf_o#{index}", options_for_select(wf_filter.operator_options_for(condition.key), condition.operator.to_s), {:class=>" span2", :onChange=>"wfFilter.updateConditionAt('#{index}')"} %>
  <%= render :partial => "/will_filter/filter/containers/#{condition.container.template_name}", :locals => {:container => condition.container, :index => index} %>


  <span class="btn-group righter">
    <%=link_to_function("<span>-</span>".html_safe, "wfFilter.removeConditionAt('#{index}')", :class => "btn") %>
    <%=link_to_function("<span>+</span>".html_safe, "wfFilter.addConditionAfter('#{index}')", :class => "btn") %>
  </span>
</div>



      